header.header
  div.header-wrapper
    a(href='/').header__logo
      img(src='/images/toppan-nexus-logo.svg' alt='Toppan Nexus Logo')
    nav.header__nav
      ol.header__nav__items
        each menuItem, idx in menuItems
          if menuItem.type === 'submenu' || menuItem.type === 'cards'
            li.header__nav__item
              button.font-extrabold.header__nav__submenu-toggler(aria-controls=`submenu-drawer-${idx}`)
                | #{menuItem.label}

              ol(id=`submenu-drawer-${idx}` aria-hidden='true' class=`header__nav__submenu header__nav__submenu--${menuItem.type}`)
                for subMenuItem in menuItem.items
                  li.header__nav__submenu-item
                    if menuItem.type === 'submenu'
                      h2.header__nav__submenu-item-title.font-extrabold= subMenuItem.label
                      ol.header__nav__submenu-items
                        for subSubMenuItem in subMenuItem.items
                          li.header__nav__submenu-items__item
                            a(href=subSubMenuItem.href).font-medium.header__nav__subitem-link
                              span= subSubMenuItem.label
                              i(class='fa-regular fa-chevron-right ml-2')
                    else
                      a(href=subMenuItem.href).header__nav__card
                        img.header__nav__card-img(src=subMenuItem.img alt=subMenuItem.title)
                        h2.header__nav__card-title.font-extrabold= subMenuItem.title
                        p.header__nav__card-desc.font-medium= subMenuItem.description
          else
            li.header__nav__item
              a(href=menuItem.href).font-extrabold.header__nav__item-link= menuItem.label
    div.header__right.header__right--mobile
      +button({
        icon: 'search',
        style: 'ghost',
        size: 'light',
        reverse: false,
        large: false,
        iconOnly: true,
        type: 'button',
      })(id='mobile-nav-search-btn' class='header__right__search-btn')

