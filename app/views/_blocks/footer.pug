footer.footer.container-t
  section.footer__connect
    img(inline src="/images/toppan-nexus-logo.svg" alt="Toppan Nexus Logo").footer__connect__left
    div.footer__connect__right
      h2.footer__connect__right-header.font-extrabold.text-black.mb-8
        span.text-black Connecting
        br
        span.text-blue Possibilities
      ul.footer__connect__right-socials
        for social in socials
          li.footer__connect__right-socials__item
            a(href=social.href target="_blank" rel="noreferrer noopener").footer__connect__right-socials__item-link
              i(class=`fa-brands fa-${social.icon} text-black mr-1`)
              span.text-black.font-extrabold= social.label
        li.footer__connect__right-socials__item
          +button('Contact Us')(href="/contact-us" class="footer__connect__right-socials__item-link")
  section.footer__contacts.mb-8
    h2.footer__contacts-title.font-extrabold.text-black.mt-8 OFFICES
    ul.mt-8.footer__contacts-list
      for contact in contactData
        li.footer__contacts-list__item
          div.footer__contacts-list__item--desktop
            h3.text-black.font-extrabold.footer__contacts-list__item-title.mb-2= contact.title
            address.footer__contacts-list__item-addr
              for address in contact.address
                | #{address}
                br
              a(href=`tel:${contact.tel}`, class="footer__contacts-list__item-link")= contact.tel

          +accordion(contact.title, 'arrow', false, 'footer__contacts-list__item--mobile')
            address.footer__contacts-list__item-addr
              for address in contact.address
                | #{address}
                br
              a(href=`tel:${contact.tel}`, class="footer__contacts-list__item-link")= contact.tel

    div.mt-8.footer__footnote
      div.footer__footnote__left
        small Â© TOPPAN Nexus 2023
      div.footer__footnote__right
        ul.footer__footnote__right-list
          for link in tncLinks
            li.footer__footnote__right-list__item
              +link(link.label)(href=link.href target="_blank" rel="noreferrer noopener").footer__footnote__right-list__item-link.text-blue
                | #{link.label}
